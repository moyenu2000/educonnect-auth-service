{
  "info": {
    "name": "Learning Platform Authentication API",
    "description": "Authentication microservice with JWT, 2FA, OAuth2, and user management",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "auth_base_url",
      "value": "http://localhost:8081/api",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "refresh_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "temp_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "verify_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"username\":\"testuser\",\"email\":\"test@example.com\",\"password\":\"password123\",\"fullName\":\"Test User\"}"
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"usernameOrEmail\":\"test@example.com\",\"password\":\"password123\"}"
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        },
        {
          "name": "Register Admin",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/auth/register-admin",
              "host": ["{{base_url}}"],
              "path": ["auth", "register-admin"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"username\":\"adminuser\",\"email\":\"admin@example.com\",\"password\":\"adminpass123\",\"fullName\":\"Admin User\"}"
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        },
        {
          "name": "Login Admin",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"usernameOrEmail\":\"admin@example.com\",\"password\":\"adminpass123\"}"
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        },
        {
          "name": "Verify 2FA",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/auth/verify-2fa",
              "host": ["{{base_url}}"],
              "path": ["auth", "verify-2fa"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"tempToken\":\"{{temp_token}}\",\"code\":\"123456\"}"
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/auth/refresh-token",
              "host": ["{{base_url}}"],
              "path": ["auth", "refresh-token"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"refreshToken\":\"{{refresh_token}}\"}"
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/auth/logout",
              "host": ["{{base_url}}"],
              "path": ["auth", "logout"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"refreshToken\":\"{{refresh_token}}\"}"
            },
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ]
          }
        },
        {
          "name": "Verify Email",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/auth/verify-email?token={{verify_token}}",
              "host": ["{{base_url}}"],
              "path": ["auth", "verify-email"],
              "query": [ { "key": "token", "value": "{{verify_token}}" } ]
            }
          }
        },
        {
          "name": "Resend Verification Email",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/auth/resend-verification",
              "host": ["{{base_url}}"],
              "path": ["auth", "resend-verification"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"email\":\"test@example.com\"}"
            },
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ]
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/auth/change-password",
              "host": ["{{base_url}}"],
              "path": ["auth", "change-password"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"currentPassword\":\"oldPassword123\",\"newPassword\":\"newPassword123\"}"
            },
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ]
          }
        },
        {
          "name": "Enable 2FA",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/auth/2fa/enable",
              "host": ["{{base_url}}"],
              "path": ["auth", "2fa", "enable"]
            },
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ]
          }
        },
        {
          "name": "Confirm 2FA",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/auth/2fa/confirm",
              "host": ["{{base_url}}"],
              "path": ["auth", "2fa", "confirm"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"code\":\"123456\"}"
            },
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ]
          }
        },
        {
          "name": "Disable 2FA",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/auth/2fa/disable",
              "host": ["{{base_url}}"],
              "path": ["auth", "2fa", "disable"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"password\":\"your_password\"}"
            },
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ]
          }
        },
        {
          "name": "Register Question Setter",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/auth/register-question-setter",
              "host": ["{{base_url}}"],
              "path": ["auth", "register-question-setter"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"username\":\"setteruser\",\"email\":\"setter@example.com\",\"password\":\"setterpass123\",\"fullName\":\"Setter User\"}"
            },
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ]
          }
        },
        {
          "name": "Create Admin (Testing)",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/auth/create-admin",
              "host": ["{{base_url}}"],
              "path": ["auth", "create-admin"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"username\":\"adminuser2\",\"email\":\"admin2@example.com\",\"password\":\"adminpass456\",\"fullName\":\"Admin User 2\"}"
            },
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ]
          }
        },
        {
          "name": "Create Question Setter (Testing)",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/auth/create-question-setter",
              "host": ["{{base_url}}"],
              "path": ["auth", "create-question-setter"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"username\":\"setteruser2\",\"email\":\"setter2@example.com\",\"password\":\"setterpass456\",\"fullName\":\"Setter User 2\"}"
            },
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ]
          }
        }
      ]
    },
    {
      "name": "User Profile",
      "item": [
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/auth/me",
              "host": ["{{base_url}}"],
              "path": ["auth", "me"]
            },
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ]
          }
        },
        {
          "name": "Update User Profile",
          "request": {
            "method": "PUT",
            "url": {
              "raw": "{{base_url}}/auth/profile",
              "host": ["{{base_url}}"],
              "path": ["auth", "profile"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"fullName\":\"Updated Name\",\"bio\":\"This is my bio\",\"avatarUrl\":\"https://example.com/avatar.png\"}"
            },
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Password Management",
      "item": [
        {
          "name": "Forgot Password",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/auth/forgot-password",
              "host": ["{{base_url}}"],
              "path": ["auth", "forgot-password"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"email\":\"test@example.com\"}"
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/auth/reset-password",
              "host": ["{{base_url}}"],
              "path": ["auth", "reset-password"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"token\":\"{{reset_token}}\",\"newPassword\":\"newpassword123\",\"confirmPassword\":\"newpassword123\"}"
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Admin Management",
      "item": [
        {
          "name": "Get All Users (Admin)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/auth/admin/users?page=0&size=10",
              "host": ["{{base_url}}"],
              "path": ["auth", "admin", "users"],
              "query": [
                { "key": "page", "value": "0" },
                { "key": "size", "value": "10" }
              ]
            },
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ]
          }
        },
        {
          "name": "Update User Role (Admin)",
          "request": {
            "method": "PUT",
            "url": {
              "raw": "{{base_url}}/auth/admin/users/1/role",
              "host": ["{{base_url}}"],
              "path": ["auth", "admin", "users", "1", "role"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"role\":\"ADMIN\"}"
            },
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ]
          }
        },
        {
          "name": "Update User Status (Admin)",
          "request": {
            "method": "PUT",
            "url": {
              "raw": "{{base_url}}/auth/admin/users/1/status",
              "host": ["{{base_url}}"],
              "path": ["auth", "admin", "users", "1", "status"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"enabled\":true}"
            },
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ]
          }
        }
      ]
    }
  ]
}
